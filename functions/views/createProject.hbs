<html>
	<head>
		<title>Create Project</title>
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

		<!-- Latest compiled JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<script>
			/* Temporary Functions for testing */
			function tempSolution(){
				$('#addCommentView').hide();
				$('#singleTaskButton').hide();
			}
			function addComment(){
				$('#singleTaskView').hide();
				$('#addCommentView').show();
				$("#addCommentButton").hide();
				$('#singleTaskButton').show();
			}
			function singleTaskView(){
				$('#addCommentView').hide();
				$('#singleTaskView').show();
				$('#singleTaskButton').hide();
				$("#addCommentButton").show();
			}
			/* Temporary Functions for testing */
		</script>
		<style>
			td { border-right: 1px solid black !important; height: 35px !important;}
			#createProjectView { border: 1px solid black; height: 400px; }
			a {color: black !important;}
		</style>
		<meta name="robots" content="noindex nofollow">
  	</head>
    <body class="container" onload="tempSolution()">
    	
    	<!--Begin Header Container-->
    	<!--Begin Header Container-->
    	<div class="container">
    		<div id="logoRow" class="row pt-2 pr-3 ">
	    		<div class="col-10 empty-container">
			  	</div>
				<div class="col-1 justify-content-lg-right">
					<h4 id="logo"><a href="https://mypmwork.com">mypmwork.com</a></h4>
  				</div>
		  	</div>
			<div class="row justify-content-lg-center">
				<div class="col col-lg-auto pt-0">
	  			</div>
	  		</div>
			<div class="row justify-content-between">
				<div class="col-9">
					<div class="row">
						<div class="col">
							<span id="usernameLabel" class="font-weight-bold">Username</span>
							<span id="username">{{dbUser.login.username}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col">
	    					<span id="userRoleLabel" class="font-weight-bold">Role</span>
	    					<span id="userRole">{{userRole}}</span>
	    				</div>
	    			</div>	
				</div>
				<div class="justify-content-right pt-4 pr-3 empty-container">
				</div>
      		</div>
		</div>
		<div class="justify-content-right pt-4 pr-3 empty-container">
		</div>
      	<!--End Header Container -->
      	
      	<!--Begin Main View Container-->
      	<div class="container pt-2">
      		<!--Begin Add Project Details Container-->
			<div class="container pt-4">
	      		<div id="singleTaskInfo">
      				<div class="row">
      					<div class="col-3">
      					</div>
							<form>
	      				<div class="col">
								<div class="row form-group">
										<label for="projectNameInputLabel">Project Name</label>
									<div class="col-8">
										<input class="form-control" id="projectNameInput"  placeholder="Enter New Unique Project Name">
									</div>
								</div>
								<div class="row form-group">
										<label class="pr-1"for="projectStartDateLabel">Start date</label>
										<input class="datepicker" data-date-format="mm/dd/yyy" id="projectStartDate">
										<label class="pl-1 pr-1" for="projectStartDateLabel">Due date</label>
										<input class="datepicker" data-date-format="mm/dd/yyy" id="projectStartDate">
								</div>
								<div class="row form-group">
									<label for="projectAssigneeLabel">Assigned To</label>
									<div class="dropdown pl-3">
									  	<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									    Select Project Manager
									  	</button>
									  	<div class="dropdown-menu">
									   		<a class="dropdown-item" href="#">Action</a>
									    	<a class="dropdown-item" href="#">Another action</a>
									    	<a class="dropdown-item" href="#">Something else here</a>
									  	</div>
									</div>
								</div>
								<div class="form-group">
									<label for="projectNameInputLabel">Project Description</label>
									<textarea class="form-control" id="projectNameInput"  placeholder="Brief Project Description"></textarea>
								</div>
								<div class="row">
									<div class="col float-left">
										<div class="dropdown">
										  	<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										    Add Followers
										  	</button>
										  	<div class="dropdown-menu">
										    	<a class="dropdown-item" href="#">lindorg</a>
										   		<a class="dropdown-item" href="#">warnemun</a>
										  	</div>
										</div>
									</div>
									<div class="col"></div>
									<div class="col-4 float-right">		
										<button type="submit" class="btn btn-primary"><a href="projectSummary">Create Project</a></button>
									</div>
								</div>
		    			</div>
							</form>
      					<div class="col-3">
      					</div>
		    		</div>
		    	</div>
		    </div>
      		<!--End Add Project Details Container-->
      	</div>
      	<!--End Main View Container-->
    </body>
</html>