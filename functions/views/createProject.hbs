<html>
	<head>
		<title>Create Project</title>
		<!-- Latest compiled and minified Bootstrap CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<!-- Latest compiled Bootstrap JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<style>
			td { border-right: 1px solid black !important; height: 35px !important;}
			a {color: black !important;}
		</style>
		<meta name="robots" content="noindex nofollow">
  	</head>
    <body class="container" onload="tempSolution()">
    	
		<!-- Begin Header Container-->
    	<div class="container">
    		<div class="row pt-2 pr-3">
	    		<div class="col-10 empty-container">
			  	</div>
				<div class="col-1 justify-content-lg-right">
					<h4 id="logo"><a href="/">mypmwork.com</a></h4>
  				</div>
  			</div>
    		<div class="row justify-content-lg-center">
				<div class="col col-lg-auto pt-0">
			  		<h1>{{dbProjects.projectName}}</h1>
		  		</div>
		  	</div>
    	</div>
    	<!-- End Header Container-->

    	<!-- Begin Info Container -->
    	<div class="container">
    		<div class="row">
  				<div id="userInfo" class="col-5">
					<div class="row pt-2">
						<div class="col">
							<span class="font-weight-bold">Username</span>
							<span id="username">{{dbUser.login.username}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col">
	    					<span class="font-weight-bold">Role</span>
	    					<span id="userRoll">{{userRole}}</span>
	    				</div>
	    			</div>	
	    		</div>
				<div id="summaryTrackingButtons"class="col-4 pt-4 empty-container">
      			</div>
				<div class="col-1 empty-container">
				</div>
				<div id="createButtons" class="col-2 pt-4 empty-container">
  				</div>
			</div>
		</div>
    	<!-- End User Info Container -->
      	
      	<!--Begin Main View Container-->
      	<div id="mainView" class="container pt-2">
      		<!--Begin Add Project Details Container-->
			<div class="container pt-4">
  				<div class="row">
  					<div class="col-3 empty-container">
  					</div>
  					<div class="col">
						<form action="/createProject" method="POST">
							<div class="row form-group">
								<label id="projectNameInputLabel" for="projectNameInput">Project Name</label>
								<div class="col-8">
									<input type="text" class="form-control" id="projectNameInput"  placeholder="Enter New Unique Project Name" name="projectName">
								</div>
							</div>
							<div class="row form-group">
									<label class="pr-1" for="projectStartDateLabel">Start date</label>
									<input type="date" class="datepicker" data-date-format="mm/dd/yyy" id="projectStartDateLabel" name="startDate">
									<label class="pl-1 pr-1" class="projectStartDateLabel" for="projectStartDate">Due date</label>
									<input type="date" class="datepicker" data-date-format="mm/dd/yyy" id="projectStartDate" name="dueDate">
							</div>
							<div class="row form-group">
								<label for="projectAssigneeLabel">Assigned To</label>
								<div class="dropdown pl-3">
								  	<select class="form-control" id="projectAssigneeLabel" name="projectManager">
										<!--{{#each projectManagers}}
								  		<option>{{username}}</option>
								  		{{/each}}-->
								  		<option>lindorg</option>
								  		<option>warnemun</option>
								  		<option>smitha</option>
								  		<option>collinb</option>
								  		<option>bensona</option>
								  		<option>burnse</option>
								  	</select>
								</div>
							</div>
							<div class="row form-group">
								<label class="projectDescriptionInputLable" for="projectDescriptionInput">Project Description</label>
								<textarea class="form-control" id="projectDescriptionInput"  placeholder="Brief Project Description" name="details"></textarea>
							</div>
							<div class="row">
								<div class="form-group">
									<label for="addFollowers">Add Followers</label>
								  	<select multiple class="form-control" id="addFollowers">
										<!--{{#each users}}
								  		<option>{{username}}</option>
								  		{{/each}}-->
								  		<option>lindorg</option>
								  		<option>warnemun</option>
								  		<option>smitha</option>
								  		<option>collinb</option>
								  		<option>bensona</option>
								  		<option>burnse</option>
								  	</select>
								</div>
							</div>
							<div class="col">
							</div>
							<div class="col-4 float-right">		
								<button type="submit" class="btn btn-primary">Create Project</button>
							</div>
						</form>
					</div>
  					<div class="col-3 empty-container">
  					</div>
	    		</div>
	    		<!-- End row-->
		    </div>
      		<!--End Add Project Details Container-->
      	</div>
      	<!--End Main View Container-->
    </body>
</html>