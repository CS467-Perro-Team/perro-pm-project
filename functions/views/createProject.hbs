<html>
	<head>
		<title>Create Project</title>
		<!-- Latest compiled and minified Bootstrap CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<!-- Latest compiled Bootstrap JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<style>
			html, body{
				height: 100%;
				margin: 0;
			}
			footer {
				height: 50px;
			}
			.mainView {
				min-height: 100%;
				margin-bottom: -50px;
			}
			td { border-right: 1px solid black !important; height: 35px !important;}
			#logo a {color: #417DB5 !important; }
		</style>
		<meta name="robots" content="noindex nofollow">
  	</head>
    <body class="container">
    	
		<!-- Begin Header Container-->
    	<div class="container">
    		<div class="row pt-2 pr-3">
	    		<div class="col-10 empty-container">
			  	</div>
				<div class="col-1 justify-content-lg-right">
					<h4 id="logo"><a href="/siteMap">mypmwork.com</a></h4>
  				</div>
  			</div>
    		<div class="row justify-content-lg-center">
				<div class="col col-lg-auto pt-0">
			  		<h1>Add New Project</h1>
		  		</div>
		  	</div>
    	</div>
    	<!-- End Header Container-->

    	<!-- Begin Info Container -->
    	<div class="container">
    		<div class="row">
  				<div id="userInfo" class="col-5">
					<div class="row pt-2">
						<div class="col">
							<span class="font-weight-bold">Username</span>
							<span id="username">{{dbUser.username}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col">
	    					<span class="font-weight-bold">Role</span>
	    					<span id="userRoll">{{dbUser.userrole}}</span>
	    				</div>
	    			</div>	
	    		</div>
				<div id="summaryTrackingButtons"class="col-4 pt-4 empty-container">
      			</div>
				<div class="col-1 empty-container">
				</div>
				<div id="createButtons" class="col-2 pt-4 empty-container">
  				</div>
			</div>
		</div>
    	<!-- End User Info Container -->
      	
      	<!--Begin Main View Container-->
      	<div class="mainView container pt-2">
      		<!--Begin Add Project Details Container-->
			<div class="container pt-4 pb-4">
  				<div class="row">
  					<div class="col-3 empty-container">
  					</div>
  					<div class="col border border-dark" style="background: #F1F3F4">
						<form action="/createProject" method="POST">
							<div class="row form-group pl-2 pr-2 pt-4">
								<label id="projectNameInputLabel" for="projectNameInput">Project Name</label>
								<div class="col pr-0">
									<input type="text" class="form-control border border-dark" id="projectNameInput"  placeholder="Enter New Unique Project Name" name="projectName" required>
								</div>
							</div>
							<div class="row form-group pl-2 pr-2">
								<div class="col pl-0">
									<label id="projectStartDateLabel" class="pr-1" for="projectStartDate">Start date</label>
									<input type="date" class="datepicker" data-date-format="mm/dd/yyy" id="projectStartDate" name="projectStartDate" required>
								</div>
								<div>
									<label id="projectDueDateLabel" class="pl-1 pr-1" for="projectDueDate">Due date</label>
									<input type="date" class="datepicker" data-date-format="mm/dd/yyy" id="projectDueDate" name="projectDueDate" required>
								</div>
							</div>
							<div class="row form-group pl-2 pr-2">
									<label id="projectManagerLabel" for="projectManager">Assigned To</label>
								<div class="col-6 pr-0">
								  	<select class="form-control border border-dark" id="projectManager" name="projectManager" required>
										<{{#each dbPMs}}
								  		<option>{{username}}</option>
								  		{{/each}}>
								  	</select>
								</div>
							</div>
							<div class="row form-group pl-2 pr-2">
								<label class="projectDescriptionLabel" for="projectDescription">Project Description</label>
								<textarea class="form-control border border-dark" id="projectDescription"  placeholder="Brief Project Description" name="projectDescription" required></textarea>
							</div>
							<div class="row pl-2 pr-2">
								<div class="form-group">
									<label id="projectTeamLabel" for="projectTeam">Add Participants</label>
								  	<select multiple class="col form-control border border-dark" id="projectTeam" name="projectTeam" required>
										<{{#each dbUsers}}
								  		<option>{{username}}</option>
								  		{{/each}}>
								  	</select>
								</div>
								<div class="col">
								</div>
								<div class="col-4 pr-0">		
									<button type="submit" class="btn btn-primary float-right" style="background:#417DB5; color:black !important">Create Project</button>
								</div>
							</div>
						</form>
					</div>
  					<div class="col-3 empty-container">
  					</div>
	    		</div>
	    		<!-- End row-->
		    </div>
      		<!--End Add Project Details Container-->
      	</div>
      	<!--End Main View Container-->
		<!-- Begin Footer -->
	    <footer class="footer">
	    	<!-- Begin Footer Row -->
	    	<div class="row">
	    		<!-- Begin empty left column -->
	    		<div class="col">
	    		</div>
	    		<!-- End empty left column -->

	    		<!-- Begin Middle column -->
				<div class="col-6">
					<ul class="nav justify-content-center">
						<li class="nav-item"><a class="nav-link" href="#">mypmwork.com</a></li>
						<li class="nav-item"><a class="nav-link" href="#">help</a></li>
						<li class="nav-item"><a class="nav-link" href="#">resources</a></li>
						<li class="nav-item"><a class="nav-link" href="/siteMap">about</a></li>
						<li class="nav-item"><a class="nav-link" href="/logout">sign out</a></li>
					</ul>
	    		</div>
	    		<!-- End Middle column -->

	    		<div class="col">
	    		</div>
	    		<!-- End empty right column -->
	    	</div>
	    	<!-- End Footer Row-->
	    </footer>
	    <!-- End Footer -->
    </body>
</html>