<html>
	<head>
		<title>Project List</title>
		<!-- Latest compiled and minified Bootstrap CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<!-- Latest compiled Bootstrap JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<script>
		HTMLDocument.prototype.ready = function () {
			return new Promise(function(resolve, reject) {
				if (document.readyState === 'complete') {
					resolve(document);
				} else {
					document.addEventListener('DOMContentLoaded', function() {
							resolve(document);
						});
				}
			});
		}
		document.ready().then(function(){
			var a =	document.getElementById("welcomeHeader");
			var b =	document.getElementById("welcomeMessage");
			var c = document.getElementById("returnUser");
			if(document.location.pathname.includes('projectList/welcome')){
				a.classList.add("d");
				b.classList.add("d");
				c.classList.add("d-none");
			} else {
				a.classList.add("d-none");
				b.classList.add("d-none");
				c.classList.add("d");
			}
		});
		</script>
		<style>
			html, body{
				height: 100%;
				margin: 0;
			}
			footer {
				height: 50px;
			}
			.mainView {
				min-height: 100%;
				margin-bottom: -50px;
			}
			td { border-right: 1px solid black !important; height: 35px !important;}
			a {color: black !important;}
		</style>
		<meta name="robots" content="noindex nofollow">
  	</head>
    <body class="container">

		<!-- Begin Header Container-->
    	<div class="container">
    		<div class="row pt-2 pr-3">
	    		<div class="col-10 empty-container">
			  	</div>
				<div class="col-1 justify-content-lg-right">
					<h4 id="logo"><a href="/siteMap">mypmwork.com</a></h4>
  				</div>
  			</div>
    		<div class="row justify-content-lg-center">
				<div class="col col-lg-auto pt-0" id="welcomeHeader">
			  		<h1>Welcome {{dbUser.username}}!</h1>
			  	</div>
			  	<div class="col col-lg-auto pt-0" id="returnUser">
			  		<h1>Project List</h1>
		  		</div>
		  	</div>
		  	<div class="row justify-content-lg-center" id="welcomeMessage">
		  		<div class="col">
		  		</div>
		  		<div class="col-6 justify-content-center"><p class="mb-0 justify-content-center">Once you are assigned to a project, you will see the project listed below.</p><p class="mt-0 ml-5">Please contact your PM to be added to your first project.</p>
		  		</div>
		  		<div class="col">
		  		</div>
		  	</div>
    	</div>
    	<!-- End Header Container-->

    	<!-- Begin User Info Container -->
    	<div class="container">
    		<div class="row">
  				<div id="userInfo" class="col-5">
					<div class="row pt-2">
						<div class="col">
							<span class="font-weight-bold">Username</span>
							<span id="username">{{dbUser.username}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col">
	    					<span class="font-weight-bold">Role</span>
	    					<span id="userRoll">{{dbUser.userrole}}</span>
	    				</div>
	    			</div>	
	    		</div>
				<div id="summaryTrackingButtons"class="col-4 pt-4 empty-container">
      			</div>
				<div class="col-1 empty-container">
				</div>
				<div class="col-2 pt-4">
	  				<button id="createProjectButton" class="float-right"><a href="/createProject">Create Project</a></button>
  				</div>
			</div>
		</div>
    	<!-- End User Info Container -->

    	<!-- Begin Main View Container -->
		<div class="mainView container pt-2">
      		<div id="projectListView">
	      		<table id="projectListTable" class="table table-striped border border-dark">
	      			<thead class="thead-dark">
		      			<tr scope="row">
		      				<th scope="col">
		      					Projects
		      				</th>
		      				<th scope="col">
		      					Completed Tasks
		      				</th>
		      				<th scope="col">
		      					Remaining Tasks
		      				</th>
		      				<th scope="col">
		      					Total Tasks
		      				</th>
		      				<th scope="col">
		      					% Complete
		      				</th>
	      				</tr>
	      			</thead>
	      			<tbody>
						{{#each projectTable}}
		      			<tr class="table" scope="row">
		      				<td class="border-right-dark"><a href="/projectSummary/{{name}}">{{name}}</a></td>
		      				<td>{{completedTasks}}</td>
		      				<td>{{remainingTasks}}</td>
		      				<td>{{totalTasks}}</td>
		      				<td>{{complete}}%</td>
		      			</tr>
						{{/each}}
		      			</tr>	
		      		</tbody>
	      		</table>
	      	</div>
      	</div>
      	<!-- End Main View Container -->
		<!-- Begin Footer -->
	    <footer class="footer">
	    	<!-- Begin Footer Row -->
	    	<div class="row">
	    		<!-- Begin empty left column -->
	    		<div class="col">
	    		</div>
	    		<!-- End empty left column -->

	    		<!-- Begin Middle column -->
				<div class="col-6">
					<ul class="nav justify-content-center">
						<li class="nav-item"><a class="nav-link" href="#">mypmwork.com</a></li>
						<li class="nav-item"><a class="nav-link" href="#">help</a></li>
						<li class="nav-item"><a class="nav-link" href="#">resources</a></li>
						<li class="nav-item"><a class="nav-link" href="/siteMap">about</a></li>
						<li class="nav-item"><a class="nav-link" href="/logout">sign out</a></li>
					</ul>
	    		</div>
	    		<!-- End Middle column -->

	    		<div class="col">
	    		</div>
	    		<!-- End empty right column -->
	    	</div>
	    	<!-- End Footer Row-->
	    </footer>
	    <!-- End Footer -->    	
    </body>
</html>