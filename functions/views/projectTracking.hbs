<html>
	<head>
		<title>Single Project</title>
		<!-- Latest compiled and minified Bootstrap CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<!-- Latest compiled Bootstrap JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<!-- Latest highcharts scripts -->
		<script src="https://code.highcharts.com/highcharts.js"></script>
		<script src="https://code.highcharts.com/modules/series-label.js"></script>
		<script src="https://code.highcharts.com/modules/exporting.js"></script>
		<script src="https://code.highcharts.com/modules/export-data.js"></script>
		<script src="https://code.highcharts.com/modules/accessibility.js"></script>
		<style>
			html, body{
				height: 100%;
				margin: 0;
			}
			footer {
				height: 50px;
			}
			.mainView {
				min-height: 100%;
				margin-bottom: -50px;
			}
			td { border-right: 1px solid black !important; height: 35px !important;}
			a {color: black !important;}
			/*Highcharts CSS*/
			.highcharts-figure, .highcharts-data-table table {
			    min-width: 360px; 
			    max-width: 800px;
			    margin: 1em auto;
			}

			.highcharts-data-table table {
				font-family: Verdana, sans-serif;
				border-collapse: collapse;
				border: 1px solid #EBEBEB;
				margin: 10px auto;
				text-align: center;
				width: 100%;
				max-width: 500px;
			}
			.highcharts-data-table caption {
			    padding: 1em 0;
			    font-size: 1.2em;
			    color: #555;
			}
			.highcharts-data-table th {
				font-weight: 600;
			    padding: 0.5em;
			}
			.highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
			    padding: 0.5em;
			}
			.highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
			    background: #f8f8f8;
			}
			.highcharts-data-table tr:hover {
			    background: #f1f7ff;
			}
		</style>
		<meta name="robots" content="noindex nofollow">
  	</head>
    <body class="container">

    	<!-- Begin Header Container-->
    	<div class="container">
    		<div class="row pt-2 pr-3">
	    		<div class="col-10 empty-container">
			  	</div>
				<div class="col-1 justify-content-lg-right">
					<h4 id="logo"><a href="/">mypmwork.com</a></h4>
  				</div>
  			</div>
    		<div class="row justify-content-lg-center">
				<div class="col col-lg-auto pt-0">
			  		<h1>{{dbProjects.projectName}}</h1>
		  		</div>
		  	</div>
    	</div>
    	<!-- End Header Container-->

    	<!-- Begin User Info Container -->
    	<div class="container">
    		<div class="row">
  				<div class="col-5">
					<div class="row pt-2">
						<div class="col">
							<span class="font-weight-bold">Username</span>
							<span id="username">{{dbUser.username}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col">
	    					<span class="font-weight-bold">Role</span>
	    					<span id="userRoll">{{dbUser.userrole}}</span>
	    				</div>
	    			</div>	
	    		</div>
				<div class="col-4 pt-4">
      				<button id="projectSummaryButton" class="button pr-1"><a href="/projectSummary">Summary</a></button>
      				<button id="projectTrackingButton" class="button pl-1" style="background:#417DB5; color:black !important"><a href="/projectTracking">Tracking</a></button>
				</div>
				<div class="col-1 empty-container">
				</div>
				<div class="col-2 pt-4">
	  				<button id="createNewTask" class="float-right"><a href="/createTask">Create New Task</a></button>
  				</div>
			</div>
		</div>
    	<!-- End User Info Container -->
    	<script>
    		document.addEventListener('DOMContentLoaded', function(){
    			Highcharts.chart('highchart-container', {
			    title: {
			        text: '{{dbProjects.projectName}}'
			    },
			    yAxis: {
			        title: {
			            text: 'Number of Tasks'
			        }
			    },
			    xAxis: {
			        accessibility: {
			            rangeDescription: 'Range: {{dbProjects.startDate}} to {{dbProjects.dueDate}}'
			        }
			    },
			    legend: {
			        layout: 'vertical',
			        align: 'right',
			        verticalAlign: 'middle'
			    },
			    plotOptions: {
			        series: {
			            label: {
			                connectorAllowed: false
			            },
			            pointStart: {{dbProjects.startDate}}
			        }
			    },
			    series: [{
			        name: 'Progress',
			        data: [0, 1, 1, 7, 7, 10, 13, 17,'','','']
			    }, {
			        name: 'Remaining',
			        data: [10, 13, 13, 10, 11, 11, 10, 6,'','','']
			    }, {
			        name: 'Total',
			        data: [10, 14, 14, 17, 18, 21, 23, 23,23,23,23]
			    }],
			    responsive: {
			        rules: [{
			            condition: {
			                maxWidth: 300
			            },
			            chartOptions: {
			                legend: {
			                    layout: 'horizontal',
			                    align: 'center',
			                    verticalAlign: 'bottom'
			                }
			            }
			        }]
			    }
			});
    	});
    	</script>
    	<!-- Begin Main View Container -->
		<div class="mainView container pt-2">
			<div class="row pr-3 pl-3">
				<div class="col-4 border border-dark pr-5 mr-0">
					<h3 class="pt-1" style="color:#417DB5">Project</h3>
		      		<ul class="l">
		      			<li class="">{{dbProjects.projectName}}</li>
		      			<ul class="">
		      			{{#each dbTasks}}
		      				<li class=""><a href="#">{{taskName}}</a></li>
	      				{{/each}}
		      			</ul>
		      		</ul>
	      		</div>
	      		<div id="projVisualization" class="col border border-dark ml-3 mr-0">
	      			<figure class="highcharts-figure">
				    <div id="highchart-container"></div>
				    <p class="highcharts-description">
				        Basic line chart showing the progress of the project. Start date: {{dbProjects.startDate}} to {{dbProjects.dueDate}}
				    </p>
				</figure>

	      		</div>
	      	</div>
      	</div>
      	<!--End Main View Container -->
		<!-- Begin Footer -->
	    <footer class="footer">
	    	<!-- Begin Footer Row -->
	    	<div class="row">
	    		<!-- Begin empty left column -->
	    		<div class="col">
	    		</div>
	    		<!-- End empty left column -->

	    		<!-- Begin Middle column -->
				<div class="col-6">
					<ul class="nav justify-content-center">
						<li class="nav-item"><a class="nav-link" href="/">mypmwork.com</a></li>
						<li class="nav-item"><a class="nav-link" href="/">help</a></li>
						<li class="nav-item"><a class="nav-link" href="/">resources</a></li>
						<li class="nav-item"><a class="nav-link" href="/siteMap">about</a></li>
						<li class="nav-item"><a class="nav-link" href="/logout">sign out</a></li>
					</ul>
	    		</div>
	    		<!-- End Middle column -->

	    		<div class="col">
	    		</div>
	    		<!-- End empty right column -->
	    	</div>
	    	<!-- End Footer Row-->
	    </footer>
	    <!-- End Footer -->
    </body>
</html>