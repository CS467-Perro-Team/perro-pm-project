<html>
	<head>
		<title>mypmwork</title>
		<!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<!-- Latest compiled JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<meta name="robots" content="noindex nofollow">
  	</head>
    <body class="container">
    	<div style="height:100px" class="container">
    		<div class="row justify-content-lg-center">
				<div class="col col-lg-auto pt-2">
			  		<h1>{{dbResult.projectName}}</h1>
		  		</div>
		  	</div>
    	</div><!--end container-->
    	<div class="container">
    		<div class="row justify-content-between">
  				<div class="col-4">
					<div class="row">
						<div class="col">
							<span class="font-weight-bold">Username</span>
							<span id="username">{{dbUser.login.username}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col">
	    					<span class="font-weight-bold">Role</span>
	    					<span id="userRoll">{{userRole}}</span>
	    				</div>
	    			</div>	
	    		</div>
				<div class="col-3 justify-content-lg-right">
					<h3>mypmwork.com</h3>
	  			</div>
			</div>
      	</div><!--end container -->
		<div class="container pb-1">	
			<div class="row justify-content-lg-right">
				<div class="col-10">
				</div>
				<div class="col-2 justify-content-right">
      				<button id="createNewTask">Create New Task</button>
      			</div>
			</div>
		</div>
		<div class="container pt-4">
      		<table class="table border border-dark">
      			<thead class="thead-dark">
	      			<tr>
	      				<th scope="col">
	      					Tasks
	      				</th>
	      				<th scope="col">
	      					Task Description
	      				</th>
	      				<th scope="col">
	      					Due Date
	      				</th>
	      				<th scope="col">
	      					Assignee
	      				</th>
      				</tr>
      			</thead>
      			<tbody>
	      			<tr>
	      				<td>Task 1 Name</td>
	      				<td>Task 1 Description</td>
	      				<td>10/26/2020</td>
	      				<td>warnemun</td>
	      			</tr>
	      			<tr>
	      				<td>Task 2 Name</td>
	      				<td>Task 2 Description</td>
	      				<td>10/26/2020</td>
	      				<td>warnemun</td>
	      			</tr>
	       			<tr>
	      				<td>Task 3 Name</td>
	      				<td>Task 3 Description</td>
	      				<td>11/2/2020</td>
	      				<td>warnemun</td>
	      			</tr>
	      		</tbody>
      		</table>
      	</div><!--end container -->
    </body>
</html>