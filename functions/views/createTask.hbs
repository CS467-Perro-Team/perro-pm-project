<html>
	<head>
		<title>Create Task</title>
		<!-- Latest compiled and minified Bootstrap CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<!-- Latest compiled Bootstrap JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<style>
			html, body{
				height: 100%;
				margin: 0;
			}
			footer {
				height: 50px;
			}
			.mainView {
				min-height: 100%;
				margin-bottom: -50px;
			}
			td { border-right: 1px solid black !important; height: 35px !important;}
			a {color: black !important;}
		</style>
		<meta name="robots" content="noindex nofollow">
  	</head>
    <body class="container">
    	
		<!-- Begin Header Container-->
    	<div class="container">
    		<div class="row pt-2 pr-3">
	    		<div class="col-10 empty-container">
			  	</div>
				<div class="col-1 justify-content-lg-right">
					<h4 id="logo"><a href="/siteMap">mypmwork.com</a></h4>
  				</div>
  			</div>
    		<div class="row justify-content-lg-center">
				<div class="col col-lg-auto pt-0">
			  		<h1>{{dbProjects.projectName}}</h1>
		  		</div>
		  	</div>
    	</div>
    	<!-- End Header Container-->

    	<!-- Begin Info Container -->
    	<div class="container">
    		<div class="row">
  				<div id="userInfo" class="col-5">
					<div class="row pt-2">
						<div class="col">
							<span class="font-weight-bold">Username</span>
							<span id="username">{{dbUser.username}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col">
	    					<span class="font-weight-bold">Role</span>
	    					<span id="userRoll">{{dbUser.userrole}}</span>
	    				</div>
	    			</div>	
	    		</div>
				<div id="summaryTrackingButtons"class="col-4 pt-4 empty-container">
      			</div>
				<div class="col-1 empty-container">
				</div>
				<div id="createButtons" class="col-2 pt-4 empty-container">
  				</div>
			</div>
		</div>
    	<!-- End User Info Container -->
      	
      	<!--Begin Main View Container-->
      	<div class="mainView container pt-2">
      		<!--Begin Add Task Details Container-->
			<div class="container pt-4">
  				<div class="row">
  					<div class="col-3 empty-container">
  					</div>
					<div class="col">
						<form action="/createTask" method="POST">
							<input type="hidden" id="hiddenProjectName" name="projectName" value='{{dbProjects.projectName}}' required>
							<div class="row form-group">
								<label id="taskNameInputLabel" for="taskNameInput">Task Name</label>
								<div class="col pr-0">
									<input type="text" class="form-control border border-dark" id="taskName"  placeholder="Enter New Unique Task Name" name="taskName" required>
								</div>
							</div>
				
							<div class="row form-group">
								<label class="pr-4 mr-1" for="taskDueDate" required>Due date</label>
								<input type="date" class="datepicker pl-2" data-date-format="mm/dd/yyy" id="taskDueDate" name="taskDueDate">
							</div>
				
							<div class="row form-group">
								<label id="taskAssigneeLabel" class="pr-2" for="taskAssignee">Assign To</label>
								<div class="col-6">
									<select id="taskAssignee" class="form-control border border-dark" name="taskAssignee" required>
										{{#each dbUsers}}
								  		<option>{{username}}</option>
								  		{{/each}}
									</select>
								</div>
							</div>
							<div class="row form-group">
								<label id="taskDescriptionInputLabel"for="taskDescriptionInput">Task Description</label>
								<textarea class="form-control border border-dark" id="taskDescriptionInput"  placeholder="Brief Task Description" name="taskDescription" required></textarea>
							</div>
				
							<div class="row">

								<div class="col-8 empty-container">
								</div>

								<div class="col pr-0">		
									<button type="submit" class="btn btn-primary float-right">Create Task</button>
								</div>

							</div>
						</form>
					</div>
					<div class="col-3">
  					</div>
  				</div>
	    	</div>
      		<!--End Add Project Details Container-->
      	</div>
      	<!--End Main View Container-->
		<!-- Begin Footer -->
	    <footer class="footer">
	    	<!-- Begin Footer Row -->
	    	<div class="row">
	    		<!-- Begin empty left column -->
	    		<div class="col">
	    		</div>
	    		<!-- End empty left column -->

	    		<!-- Begin Middle column -->
				<div class="col-6">
					<ul class="nav justify-content-center">
						<li class="nav-item"><a class="nav-link" href="#">mypmwork.com</a></li>
						<li class="nav-item"><a class="nav-link" href="#">help</a></li>
						<li class="nav-item"><a class="nav-link" href="#">resources</a></li>
						<li class="nav-item"><a class="nav-link" href="/siteMap">about</a></li>
						<li class="nav-item"><a class="nav-link" href="/logout"	>sign out</a></li>
					</ul>
	    		</div>
	    		<!-- End Middle column -->

	    		<div class="col">
	    		</div>
	    		<!-- End empty right column -->
	    	</div>
	    	<!-- End Footer Row-->
	    </footer>
	    <!-- End Footer -->
    </body>
</html>