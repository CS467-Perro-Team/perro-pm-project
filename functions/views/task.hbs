<html>
	<head>
		<title>Single Task</title>
		<!-- Latest compiled and minified Bootstrap CSS -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
		<!-- jQuery library -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<!-- Latest compiled Bootstrap JavaScript -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<style>
			td { border-right: 1px solid black !important; height: 35px !important;}
			a {color: black !important;}
		</style>
		<meta name="robots" content="noindex nofollow">
  	</head>
    <body class="container" onload="tempSolution()">
    	
		<!-- Begin Header Container-->
    	<div class="container">
    		<div class="row pt-2 pr-3">
	    		<div class="col-10 empty-container">
			  	</div>
				<div class="col-1 justify-content-lg-right">
					<h4 id="logo"><a href="/">mypmwork.com</a></h4>
  				</div>
  			</div>
    		<div class="row justify-content-lg-center">
				<div class="col col-lg-auto pt-0">
			  		<h1>{{dbProjects.projectName}}</h1>
		  		</div>
		  	</div>
    	</div>
    	<!-- End Header Container-->

    	<!-- Begin User Info Container -->
    	<div class="container">
    		<div class="row">
  				<div class="col-5">
					<div class="row pt-2">
						<div class="col">
							<span class="font-weight-bold">Username</span>
							<span id="username">{{dbUser.login.username}}</span>
						</div>
					</div>
					<div class="row">
						<div class="col">
	    					<span class="font-weight-bold">Role</span>
	    					<span id="userRoll">{{userRole}}</span>
	    				</div>
	    			</div>	
	    		</div>
				<div id="summaryTrackingButtons" class="col-4 pt-4 empty-container">
				</div>
				<div class="col-1 empty-container">
				</div>
				<div id="createButtons" class="col-2 pt-4 empty-container">
  				</div>
			</div>
		</div>
    	<!-- End User Info Container -->
      	
      	<!--Begin Main View Container-->
      	<div id="mainView" class="container">
	      	<!--End Single Task Info-->
	      	<div id="singleTaskInfo" class="container pt-4">
	 			<div class="row justify-content-between">
	      			<div class="col 6">
	      				<div class="row">
	      					<div class="col">
	      						<span id="singleTaskNameLabel" class="font-weight-bold">Task Name</span>
								<span id="singleTaskName">{{dbTasks.taskName}}</span>
							</div>
						</div>
						<div class="row">
							<div class="col">
		    					<span id="singleTaskDueDateLabel" class="font-weight-bold">Due Date</span>
		    					<span id="singleTaskDueDate">{{dbTasks.taskDueDate}}</span>
		    				</div>
		    			</div>	
						<div class="row">
							<div class="col">
		    					<span id="singleTaskAssigneeLabel" class="font-weight-bold">Assigned To</span>
		    					<span id="singleTaskAssignee">{{dbTasks.taskAssignee}}</span>
		    				</div>
		    			</div>	
		    		</div>
		    	</div>
		    </div>
	      	<!--End Single Task Info-->

		    <!--Being Single Task Detail Container-->
		    <div class="container pt-4">

		    	<!--Beginning Lables for Task Details Row-->
				<div class="row pb-1">
					<div class="col-10 pt-1">
						<span id="taskDescriptionLabel" class="font-weight-bold">Task Description</span>
					</div>
					<div class="float-right">
	      				<button id="addCommentButton"  data-toggle="buttons" onclick="addComment()">Add Comment</button>
	      				<button id="singleTaskButton" data-toggle="buttons" onclick="singleTaskView()">Back to Task</button>
	  				</div>
	  			</div>
		    	<!--End Labels for Task Details Row-->

		    	<!--Beginning Task Details Row-->
	  			<div class="row pl-3">
		    		
		    		<!--Beginning Task Description Container-->
					<div id=taskDescription class="col-6 border border-dark">{{dbTasks.taskDescription}}
					</div>
		    		<!--End Tesk Description Container-->

		    		<!--Beggining Comments Div-->
	  				<div id="taskComments" class="col-6">
						<table id="commentTable" class="table table-striped border border-dark">
	  						<thead class="thead-dark">
				      			<tr scope="row">
				      				<th scope="col">
				      					Comment
				      				</th>
				      				<th scope="col">
				      					Username
				      				</th>
				      				<th scope="col">
				      					Date
				      				</th>
				      			</tr>
			      			</thead>
			      			<tbody>
				      			<tr class="table" scope="row">
				      				<td class="border-right-dark "><a href="#">{{dbComments.commentDescription}}</a></td>
				      				<td>{{dbComments.commenter}}</td>
				      				<td>{{dbComments.commentDate}}</td>
				      			</tr>
				      			<tr class="table" scope="row">
				      				<td class="border-right-dark "><a href="#">	{{dbComments.commentDescription}}</a></td>
				      				<td>{{dbComments.commenter}}</td>
				      				<td>{{dbComments.commentDate}}</td>
				      			</tr>
				      			<tr class="table" scope="row">
				      				<td class="border-right-dark "><a href="#"></a></td>
				      				<td></td>
				      				<td></td>
				      			</tr>
				      			<tr class="table" scope="row">
				      				<td class="border-right-dark "><a href="#"></a></td>
				      				<td></td>
				      				<td></td>
				      			</tr>
			  				</tbody>
	  					</table>
	  				</div>
		  			<!--End Comments Div-->

				</div>
		    	<!--End Task Details Row-->

			</div>
		    <!--End Single Task Detail Containers-->
		</div>
      	<!--End Main View Container-->
    </body>
</html>